{
  "manifest_version": 3,
  "name": "Prompt Enhancer",
  "version": "1.0",
  "description": "Enhance rough prompts using OpenAI",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": [
    "https://prompt-enhancer-backend.onrender.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://prompt-enhancer-backend.onrender.com"
  }
}

